<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.dss.factor.EditFactorActivity">

    <TextView
        android:id="@+id/tv_title_update_faktor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Edit Faktor"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_update_kode_faktor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:text="Kode Faktor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tv_title_update_faktor"
        app:layout_constraintTop_toBottomOf="@id/tv_title_update_faktor" />

    <EditText
        android:id="@+id/edt_update_kode_faktor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan kode Faktor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_label_update_kode_faktor"
        app:layout_constraintTop_toBottomOf="@id/tv_label_update_kode_faktor" />

    <TextView
        android:id="@+id/tv_label_update_nama_faktor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nama Faktor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/edt_update_kode_faktor"
        app:layout_constraintTop_toBottomOf="@id/edt_update_kode_faktor" />

    <EditText
        android:id="@+id/edt_update_nama_faktor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama faktor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_label_update_nama_faktor"
        app:layout_constraintTop_toBottomOf="@id/tv_label_update_nama_faktor" />

    <TextView
        android:id="@+id/tv_label_update_bobot_faktor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Bobot Faktor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/edt_update_nama_faktor"
        app:layout_constraintTop_toBottomOf="@id/edt_update_nama_faktor" />

    <EditText
        android:id="@+id/edt_update_bobot_faktor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan bobot faktor"
        android:inputType="numberDecimal|number"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_label_update_bobot_faktor"
        app:layout_constraintTop_toBottomOf="@id/tv_label_update_bobot_faktor" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_update_bobot_faktor">

        <Button
            android:id="@+id/btn_update_faktor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Ubah Faktor"
            android:textColor="?attr/colorOnSecondary"
            android:textAllCaps="true"
            android:layout_marginEnd="10dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_delete_faktor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Hapus Faktor"
            android:textColor="?attr/colorOnSecondary"
            android:textAllCaps="true"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>