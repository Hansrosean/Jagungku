<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_nomor_faktor"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:textSize="16sp"
        tools:text="No." />

    <TextView
        android:id="@+id/tv_kode_faktor"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:textSize="16sp"
        tools:text="Kode Faktor" />

    <TextView
        android:id="@+id/tv_nama_faktor"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textSize="16sp"
        tools:text="Nama Faktor" />

    <TextView
        android:id="@+id/tv_bobot_faktor"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:textSize="16sp"
        tools:text="Bobot Faktor" />

    <ImageView
        android:id="@+id/img_edit_faktor"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="top"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_edit_24" />
</LinearLayout>