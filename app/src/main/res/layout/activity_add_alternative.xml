<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.dss.alternative.AddAlternativeActivity">

    <TextView
        android:id="@+id/tv_title_add_alternatif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Tambah Alternatif"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_add_alternatif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:text="Nama Alternatif"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tv_title_add_alternatif"
        app:layout_constraintTop_toBottomOf="@id/tv_title_add_alternatif" />

    <EditText
        android:id="@+id/edt_add_nama_alternatif"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama alternatif"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_label_add_alternatif"
        app:layout_constraintTop_toBottomOf="@id/tv_label_add_alternatif" />

    <Button
        android:id="@+id/btn_add_alternatif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Tambah Alternatif"
        android:textAllCaps="true"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="15sp"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_add_nama_alternatif" />

</androidx.constraintlayout.widget.ConstraintLayout>