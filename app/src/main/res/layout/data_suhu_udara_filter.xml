<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_data_suhu_udara_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="15dp"
    android:backgroundTint="?attr/cardBackgroundColor"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4">

        <TextView
            android:id="@+id/tv_filter_nama_varietas_in_suhu_udara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="Nama_Varietas" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv_label_suhu_udara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="Suhu Udara :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_filter_suhu_udara_in_suhu_udara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingEnd="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="9999 Celcius" />
        </LinearLayout>
    </GridLayout>
</com.google.android.material.card.MaterialCardView>