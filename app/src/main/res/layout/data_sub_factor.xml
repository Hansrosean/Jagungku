<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_data_list_sub_faktor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="15dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:backgroundTint="?attr/cardBackgroundColor"
    tools:ignore="TouchTargetSizeCheck">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:rowCount="5">

        <TextView
            android:id="@+id/tv_nama_faktor_in_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:text="Nama Faktor" />

        <ImageView
            android:id="@+id/img_edit_sub_faktor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_edit_24" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="15dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/light_grey"
                    android:text="No."
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/light_grey"
                    android:text="Nama Sub Faktor"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/light_grey"
                    android:text="Nilai"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nomor_sub_faktor_1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nama_sub_faktor_1"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="16sp"
                tools:text="Nama Sub Faktor" />

            <TextView
                android:id="@+id/tv_nilai_sub_faktor_1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:textSize="16sp"
                tools:text="Nilai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nomor_sub_faktor_2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nama_sub_faktor_2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="16sp"
                tools:text="Nama Sub Faktor" />

            <TextView
                android:id="@+id/tv_nilai_sub_faktor_2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:textSize="16sp"
                tools:text="Nilai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nomor_sub_faktor_3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nama_sub_faktor_3"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="16sp"
                tools:text="Nama Sub Faktor" />

            <TextView
                android:id="@+id/tv_nilai_sub_faktor_3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:textSize="16sp"
                tools:text="Nilai" />
        </LinearLayout>
    </GridLayout>

</com.google.android.material.card.MaterialCardView>